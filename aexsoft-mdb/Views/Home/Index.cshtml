@model IEnumerable<Movie>

<h2 class="p-2">Movies</h2>

<div class="card" style="border: none;">
	@foreach (Movie movie in Model)
	{
		<div class="row g-0 my-3" style="border: 1px solid rgba(0,0,0,.125); border-radius: .25rem;">
			<div class="col-md-3">
				<svg class="bd-placeholder-img" width="100%" height="200" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" focusable="false">
					<title>Poster</title>
					<rect width="100%" height="100%" fill="#868e96"></rect>
					<text x="43%" y="50%" fill="#dee2e6" dy=".3em">Image</text>
				</svg>
			</div>
			<div class="col-md-9">
				<div class="card-body">
					<h3 class="card-title">@movie.Title</h3>
					<p class="card-text"><small>@movie.ReleaseDate</small></p>
					<p class="card-text">@movie.Description</p>
				</div>
			</div>
		</div>
	}
</div>