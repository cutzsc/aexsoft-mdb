@model IEnumerable<Movie>

<h2 class="p-2">Movies</h2>

@foreach (Movie movie in Model)
{
<div class="row mb-3">
	<div class="card p-0">
		<div class="row g-0">
			<div class="col-md-3">
				<svg class="bd-placeholder-img" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Poster" preserveAspectRatio="xMidYMid slice" focusable="false">
					<title>Poster</title>
					<rect width="100%" height="100%" fill="#868e96"></rect>
					<text x="50%" y="50%" fill="#dee2e6" dy=".3em" dx="-1em">Poster</text>
				</svg>
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h3 class="card-title">@movie.Title</h3>
					<p class="card-text"><small class="text-muted">Release: @movie.ReleaseDate</small></p>
					<p class="card-text">@movie.Description</p>
				</div>
			</div>
		</div>
	</div>
</div>
}